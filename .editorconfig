root = true

[*.cs]
indent_style = space
indent_size = 4
end_of_line = crlf
charset = utf-8
insert_final_newline = true

# C# preferences
csharp_new_line_before_open_brace = all
csharp_preserve_single_line_statements = true
csharp_preserve_single_line_blocks = true
dotnet_naming_rule.private_fields_underscore_prefix.severity = suggestion
dotnet_naming_rule.private_fields_underscore_prefix.symbols = private_fields
dotnet_naming_rule.private_fields_underscore_prefix.style = underscore_prefix
dotnet_naming_symbols.private_fields.applicable_kinds = field
dotnet_naming_symbols.private_fields.applicable_accessibilities = private
dotnet_naming_style.underscore_prefix.capitalization = camel_case
dotnet_naming_style.underscore_prefix.required_prefix = _

[*.xaml]
indent_style = space
indent_size = 2

