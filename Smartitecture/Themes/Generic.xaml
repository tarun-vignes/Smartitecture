<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Smartitecture"
    xmlns:muxc="clr-namespace:Microsoft.UI.Xaml.Controls">

    <!-- Default Brushes -->
    <SolidColorBrush x:Key="DefaultBackgroundBrush" Color="#FFFFFFFF" />
    <SolidColorBrush x:Key="DefaultForegroundBrush" Color="#FF000000" />
    <SolidColorBrush x:Key="AccentBrush" Color="#FF0063B1" />
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="#FFFFFFFF" />
    <SolidColorBrush x:Key="ControlForegroundBrush" Color="#FF000000" />
    
    <!-- Common Styles -->
    <Style TargetType="Window">
        <Setter Property="Background" Value="#FF1A1A1A" />
    </Style>
    
    <Style TargetType="Button">
        <Setter Property="Background" Value="#FF007ACC" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="Margin" Value="8" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="PointerOver">
                                    <VisualState><Storyboard>
                                        <Setter Value="0.9" />
                                    </Storyboard></VisualState>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <VisualState><Storyboard>
                                        <Setter Value="0.8" />
                                    </Storyboard></VisualState>
                                </VisualState>
                                <VisualState x:Name="Disabled">
                                    <VisualState><Storyboard>
                                        <Setter Value="0.5" />
                                    </Storyboard></VisualState>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        
                        <Border x:Name="ButtonBackground"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{TemplateBinding CornerRadius}">
                            <ContentPresenter x:Name="ButtonContent"
                                            Content="{TemplateBinding Content}"
                                            ContentTemplate="{TemplateBinding ContentTemplate}"
                                            Margin="{TemplateBinding Padding}"
                                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style TargetType="TextBox">
        <Setter Property="MinWidth" Value="#FF2D2D30" />
        <Setter Property="MinHeight" Value="32" />
        <Setter Property="Foreground" Value="#FF2D2D30" />
        <Setter Property="Background" Value="#FF2D2D30" />
        <Setter Property="BorderBrush" Value="#FF2D2D30" />
        <Setter Property="SelectionHighlightColor" Value="#FF2D2D30" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="FontFamily" Value="#FF2D2D30" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="ScrollViewer.HorizontalScrollMode" Value="Auto" />
        <Setter Property="ScrollViewer.VerticalScrollMode" Value="Auto" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="Margin" Value="0,4" />
    </Style>
    
    <Style TargetType="RadioButton">
        <Setter Property="Foreground" Value="#FF2D2D30" />
        <Setter Property="Margin" Value="0,4" />
    </Style>
    
    <Style TargetType="CheckBox">
        <Setter Property="Foreground" Value="#FF2D2D30" />
        <Setter Property="Margin" Value="0,4" />
    </Style>
    
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="#FF2D2D30" />
        <Setter Property="Margin" Value="0,4" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>
    
    <Style TargetType="muxc:Expander">
        <Setter Property="BorderBrush" Value="#FF2D2D30" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Margin" Value="8" />
        <Setter Property="Padding" Value="12" />
        <Setter Property="CornerRadius" Value="4" />
    </Style>
    
    <Style TargetType="ScrollViewer">
        <Setter Property="HorizontalScrollMode" Value="Auto" />
        <Setter Property="VerticalScrollMode" Value="Auto" />
        <Setter Property="HorizontalScrollBarVisibility" Value="Auto" />
        <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
        <Setter Property="Padding" Value="4" />
    </Style>
    
</ResourceDictionary>




