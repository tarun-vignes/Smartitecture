<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="AIPal.UI.SecurityPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:Smartitecture.ViewModels"
    xmlns:converters="clr-namespace:Smartitecture.ViewModels.Converters"
    mc:Ignorable="d"
    Background="#FF1A1A1A">

    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Page.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Computer Security &amp; Optimization" Style="{StaticResource TitleTextBlockStyle}" Margin="0,0,0,16"/>

        <!-- Main content area with tabs -->
        <Grid Grid.Row="1">
            <TabControl>
                <!-- Security Check Tab -->
                <TabItem Header="Security Check">
                    <ScrollViewer>
                        <StackPanel>
                            <Border Background="#FF0078D4" CornerRadius="4" Padding="12"><TextBlock Text="Information" Foreground="White"/></Border>

                            <StackPanel>
                                <TextBlock Text="Security Check Options" Style="{StaticResource SubtitleTextBlockStyle}"/>
                                <CheckBox x:Name="DetailedCheckBox" Content="Perform detailed check (takes longer)"/>
                                <Button x:Name="RunSecurityCheckButton" Content="Check for Security Issues" Click="RunSecurityCheck_Click" Style="{StaticResource AccentButtonStyle}"/>
                            </StackPanel>

                            <StackPanel Visibility="{Binding ViewModel.IsSecurityResultVisible, Mode=OneWay}">
                                <TextBlock Text="Results" Style="{StaticResource SubtitleTextBlockStyle}"/>
                                <Border Background="#FF2D2D30" 
                                        BorderBrush="#FF3F3F46" 
                                        BorderThickness="1" 
                                        CornerRadius="8" 
                                        Padding="16">
                                    <StackPanel>
                                        <TextBlock Text="{Binding ViewModel.SecurityResultTitle, Mode=OneWay}" 
                                                   Style="{StaticResource SubtitleTextBlockStyle}" 
                                                   Margin="0,0,0,8"/>
                                        <TextBlock Text="{Binding ViewModel.SecurityResultContent, Mode=OneWay}" 
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <StackPanel>
                                <TextBlock Text="Common Scam Warning Signs" Style="{StaticResource SubtitleTextBlockStyle}"/>
                                <Border Background="#FF0078D4" CornerRadius="4" Padding="12"><TextBlock Text="Information" Foreground="White"/></Border>
                                <TextBlock TextWrapping="Wrap">
                                    <Run FontWeight="SemiBold">Warning signs of a scam:</Run><LineBreak/>
                                    • Popups saying your computer is infected and to call a number<LineBreak/>
                                    • Someone calling you claiming to be from Microsoft or Apple<LineBreak/>
                                    • Anyone asking for payment in gift cards<LineBreak/>
                                    • Anyone asking for remote access to your computer<LineBreak/>
                                    • Threats that your computer will be damaged if you don't act immediately
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- System Optimization Tab -->
                <TabItem Header="System Optimization">
                    <ScrollViewer>
                        <StackPanel>
                            <Border Background="#FF0078D4" CornerRadius="4" Padding="12"><TextBlock Text="Information" Foreground="White"/></Border>

                            <StackPanel>
                                <TextBlock Text="Optimization Options" Style="{StaticResource SubtitleTextBlockStyle}"/>
                                <CheckBox x:Name="AggressiveOptimizationCheckBox" Content="Aggressive optimization (closes more applications)"/>
                                <Button x:Name="RunOptimizationButton" Content="Speed Up My Computer" Click="RunOptimization_Click" Style="{StaticResource AccentButtonStyle}"/>
                            </StackPanel>

                            <StackPanel Visibility="{Binding ViewModel.IsOptimizationResultVisible, Mode=OneWay}">
                                <TextBlock Text="Results" Style="{StaticResource SubtitleTextBlockStyle}"/>
                                <Border Background="#FF2D2D30" 
                                        BorderBrush="#FF3F3F46" 
                                        BorderThickness="1" 
                                        CornerRadius="8" 
                                        Padding="16">
                                    <StackPanel>
                                        <TextBlock Text="{Binding ViewModel.OptimizationResultTitle, Mode=OneWay}" 
                                                   Style="{StaticResource SubtitleTextBlockStyle}" 
                                                   Margin="0,0,0,8"/>
                                        <TextBlock Text="{Binding ViewModel.OptimizationResultContent, Mode=OneWay}" 
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <StackPanel>
                                <TextBlock Text="Performance Tips" Style="{StaticResource SubtitleTextBlockStyle}"/>
                                <TextBlock TextWrapping="Wrap">
                                    <Run FontWeight="SemiBold">Ways to keep your computer running smoothly:</Run><LineBreak/>
                                    • Restart your computer at least once a week<LineBreak/>
                                    • Uninstall programs you don't use<LineBreak/>
                                    • Keep Windows updated<LineBreak/>
                                    • Use an antivirus program and keep it updated<LineBreak/>
                                    • Close browser tabs you're not using<LineBreak/>
                                    • Consider adding more memory (RAM) if your computer is consistently slow
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- Security Alert Explainer Tab -->
                <TabItem Header="Explain Security Alert">
                    <ScrollViewer>
                        <StackPanel>
                            <Border Background="#FF0078D4" CornerRadius="4" Padding="12"><TextBlock Text="Information" Foreground="White"/></Border>

                            <StackPanel>
                                <TextBlock Text="Describe the Alert" Style="{StaticResource SubtitleTextBlockStyle}"/>
                                <TextBox x:Name="AlertDescriptionTextBox" Text="Describe what the alert or popup says..." 
                                         TextWrapping="Wrap" 
                                         AcceptsReturn="True"
                                         Height="100"/>
                                <Button x:Name="ExplainAlertButton" 
                                        Content="Explain This Alert" 
                                        Click="ExplainAlert_Click" 
                                        Style="{StaticResource AccentButtonStyle}"/>
                            </StackPanel>

                            <StackPanel Visibility="{Binding ViewModel.IsAlertExplanationVisible, Mode=OneWay}">
                                <TextBlock Text="Explanation" Style="{StaticResource SubtitleTextBlockStyle}"/>
                                <Border Background="#FF2D2D30" 
                                        BorderBrush="#FF3F3F46" 
                                        BorderThickness="1" 
                                        CornerRadius="8" 
                                        Padding="16">
                                    <StackPanel>
                                        <TextBlock Text="{Binding ViewModel.AlertExplanationTitle, Mode=OneWay}" 
                                                   Style="{StaticResource SubtitleTextBlockStyle}" 
                                                   Margin="0,0,0,8"/>
                                        <TextBlock Text="{Binding ViewModel.AlertExplanationContent, Mode=OneWay}" 
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
            </TabControl>
        </Grid>

        <!-- Footer with help text -->
        <StackPanel Grid.Row="2" Margin="0,16,0,0">
            <TextBlock Text="Need help? Just ask AIPal any security or performance question." 
                       TextWrapping="Wrap" 
                       Opacity="0.7"
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>



