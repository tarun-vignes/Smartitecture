<?xml version="1.0" encoding="utf-8"?>
<!--
MainWindow.xaml
Main window of the Smartitecture application.
Implements a modern interface with navigation between:
- Standard chat interface
- Advanced agent interface with tool usage
-->
<Window
    x:Class="Smartitecture.UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Smartitecture.UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!-- Main layout grid with two rows: title bar and content area -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Title bar -->
            <RowDefinition Height="*"/>    <!-- Content area -->
        </Grid.RowDefinitions>

        <!-- Custom title bar for modern Windows app look -->
        <Grid x:Name="AppTitleBar" Height="32" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- App Logo -->
            <Rectangle x:Name="AppLogo"
                      Width="24" 
                      Height="24" 
                      Margin="8,0,8,0"
                      Fill="{StaticResource SmartitectureLogoBrush}"
                      VerticalAlignment="Center"/>
            
            <!-- App Title -->
            <TextBlock x:Name="AppTitle"
                       Grid.Column="1"
                       Text="Smartitecture"
                       VerticalAlignment="Center"
                       Margin="0,0,0,0"
                       Style="{StaticResource CaptionTextBlockStyle}"/>
                       
            <!-- Theme toggle button -->
            <ToggleButton x:Name="ThemeToggleButton" 
                         Grid.Column="2"
                         Margin="0,0,12,0"
                         VerticalAlignment="Center"
                         Click="ThemeToggleButton_Click"
                         ToolTipService.ToolTip="Toggle Light/Dark Mode">
                <TextBlock x:Name="ThemeIcon" Text="🌙" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/> <!-- Moon icon -->
            </ToggleButton>
        </Grid>

        <!-- Simple TabControl for navigation -->
        <TabControl x:Name="MainTabControl" Grid.Row="1">
            <TabItem Header="🏠 Getting Started" Tag="GettingStartedPage">
                <Frame x:Name="GettingStartedFrame" NavigationUIVisibility="Hidden"/>
            </TabItem>
            
            <TabItem Header="💬 Chat" Tag="ChatPage">
                <Frame x:Name="ChatFrame" NavigationUIVisibility="Hidden"/>
            </TabItem>
            
            <TabItem Header="🤖 Agent" Tag="AgentPage">
                <Frame x:Name="AgentFrame" NavigationUIVisibility="Hidden"/>
            </TabItem>
            
            <TabItem Header="🛡️ Security" Tag="SecurityPage">
                <Frame x:Name="SecurityFrame" NavigationUIVisibility="Hidden"/>
            </TabItem>
            
            <TabItem Header="🖥️ Screen Help" Tag="ScreenAnalysisPage">
                <Frame x:Name="ScreenAnalysisFrame" NavigationUIVisibility="Hidden"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>

