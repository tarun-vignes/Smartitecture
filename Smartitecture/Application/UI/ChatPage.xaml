<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Smartitecture.UI.ChatPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:Smartitecture.ViewModels"
    mc:Ignorable="d"
    Background="#FF1A1A1A">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Smartitecture Chat" Style="{StaticResource TitleTextBlockStyle}" Margin="0,0,0,16"/>

        <!-- Scrollable chat message area with message bubbles -->
        <ScrollViewer Grid.Row="1" Padding="0,0,0,16">
            <!-- ItemsControl for displaying chat messages with data binding -->
            <ItemsControl ItemsSource="{Binding ViewModel.Messages}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Avatar -->
                            <Ellipse Width="32" Height="32" Margin="0,0,8,0">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="{Binding AvatarUri}" Stretch="UniformToFill"/>
                                </Ellipse.Fill>
                            </Ellipse>

                            <!-- Message Bubble -->
                            <Border Grid.Column="1"
                                    Background="#FF2D2D30"
                                    BorderBrush="#FF3F3F46"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="12">
                                <TextBlock Text="{Binding Content}"
                                           TextWrapping="Wrap"/>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Bottom input area with text box and buttons -->
        <Grid Grid.Row="2" Background="#FF2D2D30" Margin="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>      <!-- Text input takes most space -->
                <ColumnDefinition Width="Auto"/>   <!-- Voice button -->
                <ColumnDefinition Width="Auto"/>   <!-- Send button -->
            </Grid.ColumnDefinitions>

            <TextBox x:Name="InputBox" Text="Type a message..."
                     KeyDown="InputBox_KeyDown"/>

            <Button Grid.Column="1"
                    Margin="8,0,0,0"
                    Click="VoiceButton_Click">
                <TextBlock Text="&#xE720;"/>
            </Button>

            <Button Grid.Column="2"
                    Margin="8,0,0,0"
                    Style="{StaticResource AccentButtonStyle}"
                    Click="SendButton_Click">
                <TextBlock Text="&#xE724;"/>
            </Button>
        </Grid>
    </Grid>
</Page>



