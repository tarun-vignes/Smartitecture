<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="Smartitecture.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Smartitecture"
    RequestedTheme="Light">
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- WinUI 3 Controls Styles and Resources -->
                <XamlControlsResources xmlns:controls="using:Microsoft.UI.Xaml.Controls" />
                
                <!-- Application Theme -->
                <ResourceDictionary Source="/Themes/Generic.xaml" />
                
                <!-- Logo resources -->
                <ResourceDictionary Source="ms-appx:///Assets/Logo/SmartitectureLogo.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Application-wide colors -->
            <SolidColorBrush x:Key="SystemAccentColor" Color="#0063B1" />
            <SolidColorBrush x:Key="SystemAccentColorLight1" Color="#0078D7" />
            <SolidColorBrush x:Key="SystemAccentColorLight2" Color="#5DB2EF" />
            <SolidColorBrush x:Key="SystemAccentColorLight3" Color="#9BCEF5" />
            
            <!-- Application-specific colors -->
            <SolidColorBrush x:Key="SmartitecturePrimaryBrush" Color="#0063B1"/>
            <SolidColorBrush x:Key="SmartitectureSecondaryBrush" Color="#4D9FF3"/>
            <SolidColorBrush x:Key="SmartitectureAccentBrush" Color="#FF5A5A"/>
            
            <!-- Text colors -->
            <SolidColorBrush x:Key="TextFillColorPrimary" Color="#1A1A1A" />
            <SolidColorBrush x:Key="TextFillColorSecondary" Color="#5D5D5D" />
            <SolidColorBrush x:Key="TextFillColorTertiary" Color="#8E8E8E" />
            
            <!-- Background colors -->
            <SolidColorBrush x:Key="LayerFillColorDefault" Color="#F3F3F3" />
            <SolidColorBrush x:Key="LayerFillColorAlt" Color="#FFFFFF" />
            
            <!-- Control colors -->
            <SolidColorBrush x:Key="ControlFillColorDefault" Color="#F3F3F3" />
            <SolidColorBrush x:Key="ControlFillColorSecondary" Color="#E5E5E5" />
            <SolidColorBrush x:Key="ControlFillColorTertiary" Color="#F7F7F7" />
            <SolidColorBrush x:Key="ControlFillColorDisabled" Color="#F5F5F5" />
            
            <!-- Border colors -->
            <SolidColorBrush x:Key="ControlStrokeColorDefault" Color="#CCCCCC" />
            <SolidColorBrush x:Key="ControlStrokeColorSecondary" Color="#E6E6E6" />
            
            <!-- Focus visual -->
            <SolidColorBrush x:Key="FocusStrokeColorOuter" Color="#000000" />
            <SolidColorBrush x:Key="FocusStrokeColorInner" Color="#FFFFFF" />
            
            <!-- Common border thickness -->
            <x:Double x:Key="ControlBorderThemeThickness">1</x:Double>
            <x:Double x:Key="TextControlBorderThemeThickness">1</x:Double>
        </ResourceDictionary>
    </Application.Resources>
</Application>
