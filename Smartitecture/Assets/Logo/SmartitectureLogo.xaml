<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Smartitecture Logo - Building blocks representing architecture -->
    <PathGeometry x:Key="SmartitectureLogoGeometry">
        <!-- Main building blocks -->
        <PathGeometry.Figures>
            <!-- Base Block -->
            <PathFigure StartPoint="20,150" IsClosed="True">
                <LineSegment Point="180,150" />
                <LineSegment Point="180,120" />
                <LineSegment Point="20,120" />
            </PathFigure>
            
            <!-- Middle Block -->
            <PathFigure StartPoint="40,120" IsClosed="True">
                <LineSegment Point="160,120" />
                <LineSegment Point="160,80" />
                <LineSegment Point="40,80" />
            </PathFigure>
            
            <!-- Top Block -->
            <PathFigure StartPoint="60,80" IsClosed="True">
                <LineSegment Point="140,80" />
                <LineSegment Point="140,30" />
                <LineSegment Point="60,30" />
            </PathFigure>
            
            <!-- Window 1 -->
            <PathFigure StartPoint="70,70" IsClosed="True">
                <LineSegment Point="90,70" />
                <LineSegment Point="90,50" />
                <LineSegment Point="70,50" />
            </PathFigure>
            
            <!-- Window 2 -->
            <PathFigure StartPoint="110,70" IsClosed="True">
                <LineSegment Point="130,70" />
                <LineSegment Point="130,50" />
                <LineSegment Point="110,50" />
            </PathFigure>
            
            <!-- Door -->
            <PathFigure StartPoint="90,150" IsClosed="True">
                <LineSegment Point="110,150" />
                <LineSegment Point="110,130" />
                <LineSegment Point="90,130" />
            </PathFigure>
        </PathGeometry.Figures>
    </PathGeometry>

    <!-- WinUI 3 compatible resources -->
    <SolidColorBrush x:Key="SmartitectureLogoBrush" Color="#4285F4" />
    
    <!-- Building blocks as Path objects -->
    <Path x:Key="SmartitectureBaseBlock" Fill="#4285F4" Data="M 20,150 L 180,150 L 180,120 L 20,120 Z" />
    <Path x:Key="SmartitectureMiddleBlock" Fill="#34A853" Data="M 40,120 L 160,120 L 160,80 L 40,80 Z" />
    <Path x:Key="SmartitectureTopBlock" Fill="#FBBC05" Data="M 60,80 L 140,80 L 140,30 L 60,30 Z" />
    
    <!-- Windows and door -->
    <Path x:Key="SmartitectureWindows" Fill="#FFFFFF" Data="M 70,70 L 90,70 L 90,50 L 70,50 Z M 110,70 L 130,70 L 130,50 L 110,50 Z" />
    <Path x:Key="SmartitectureDoor" Fill="#EA4335" Data="M 90,150 L 110,150 L 110,130 L 90,130 Z" />
</ResourceDictionary>
