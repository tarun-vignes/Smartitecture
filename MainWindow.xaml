<Window x:Class="Smartitecture.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource App.Title}" Height="720" Width="1120" MinHeight="700" MinWidth="1040"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource Brush.AppBackground}"
        FontFamily="Segoe UI Variable Text, Segoe UI, Arial"
        Foreground="{DynamicResource Brush.OnSurface}"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">

    <Grid Background="{DynamicResource Brush.AppBackground}">
        <ContentControl x:Name="MainContent"/>
    </Grid>
</Window>
