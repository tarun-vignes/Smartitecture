<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Smartitecture.UI.LumenDashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#0f172a">

    <Page.Resources>
        <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#1e293b"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#334155"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <Border Grid.Row="0" 
                Background="#1e293b" 
                BorderBrush="{StaticResource BorderBrush}" 
                BorderThickness="0,0,0,1" 
                Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Mode Selector -->
                <ComboBox x:Name="ModeSelector" 
                          Grid.Column="0"
                          SelectedIndex="0"
                          SelectionChanged="ModeSelector_SelectionChanged"
                          MinWidth="200"
                          Background="#334155"
                          Foreground="White">
                    <ComboBoxItem Content="LUMEN (General Assistant)"/>
                    <ComboBoxItem Content="FORTIS (Security Expert)"/>
                    <ComboBoxItem Content="NEXA (Performance)"/>
                </ComboBox>

                <!-- Auto Toggle -->
                <ToggleSwitch x:Name="AutoToggle" 
                              Grid.Column="1"
                              Header="Auto"
                              IsOn="True"
                              Margin="16,0,0,0"
                              Foreground="White"/>

                <!-- Clear Chat Button -->
                <Button x:Name="ClearChatButton"
                        Grid.Column="3"
                        Content="Clear Chat"
                        Click="ClearChat_Click"
                        Background="#334155"
                        Foreground="White"
                        BorderThickness="0"
                        CornerRadius="6"
                        Padding="16,8"/>
            </Grid>
        </Border>

        <!-- Dashboard Content -->
        <Grid Grid.Row="1" Padding="16" RowSpacing="16" ColumnSpacing="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="200"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>

            <!-- Performance Panel -->
            <Border Grid.Row="0" Grid.Column="0" 
                    Background="{StaticResource PanelBackgroundBrush}" 
                    BorderBrush="{StaticResource BorderBrush}" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="16">
                <StackPanel Spacing="12">
                    <TextBlock Text="Performance" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               Foreground="White"/>
                    
                    <!-- CPU -->
                    <StackPanel Spacing="4">
                        <TextBlock Text="CPU" FontSize="12" Foreground="#94a3b8"/>
                        <ProgressBar x:Name="CpuProgress" 
                                     Value="45" 
                                     Maximum="100" 
                                     Foreground="#3b82f6"/>
                    </StackPanel>
                    
                    <!-- Memory -->
                    <StackPanel Spacing="4">
                        <TextBlock Text="Memory" FontSize="12" Foreground="#94a3b8"/>
                        <ProgressBar x:Name="MemoryProgress" 
                                     Value="60" 
                                     Maximum="100" 
                                     Foreground="#8b5cf6"/>
                    </StackPanel>
                    
                    <!-- Disk -->
                    <StackPanel Spacing="4">
                        <TextBlock Text="Disk" FontSize="12" Foreground="#94a3b8"/>
                        <ProgressBar x:Name="DiskProgress" 
                                     Value="75" 
                                     Maximum="100" 
                                     Foreground="#06b6d4"/>
                    </StackPanel>
                    
                    <TextBlock x:Name="CpuTempText" 
                               Text="CPU Temp: N/A" 
                               FontSize="12" 
                               Foreground="#94a3b8"/>
                    
                    <Button Content="Optimize Performance" 
                            Click="OptimizePerformance_Click"
                            Background="#3b82f6"
                            Foreground="White"
                            BorderThickness="0"
                            CornerRadius="6"
                            Padding="12,6"
                            HorizontalAlignment="Stretch"/>
                </StackPanel>
            </Border>

            <!-- Security Panel -->
            <Border Grid.Row="0" Grid.Column="1" 
                    Background="{StaticResource PanelBackgroundBrush}" 
                    BorderBrush="{StaticResource BorderBrush}" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="16">
                <StackPanel Spacing="12">
                    <TextBlock Text="Security" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               Foreground="White"/>
                    
                    <!-- Firewall Status -->
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE73E;" Foreground="#22c55e" FontSize="16"/>
                        <TextBlock Text="Firewall: Checked" FontSize="12" Foreground="White"/>
                    </StackPanel>
                    
                    <!-- Defender Status -->
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE73E;" Foreground="#22c55e" FontSize="16"/>
                        <TextBlock Text="Defender: Available" FontSize="12" Foreground="White"/>
                    </StackPanel>
                    
                    <TextBlock Text="No active scan" FontSize="12" Foreground="#94a3b8"/>
                    <TextBlock x:Name="LastScanText" 
                               Text="Last Scan: Never" 
                               FontSize="12" 
                               Foreground="#94a3b8"/>
                    
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button Content="Quick Scan" 
                                Click="QuickScan_Click"
                                Background="#22c55e"
                                Foreground="White"
                                BorderThickness="0"
                                CornerRadius="6"
                                Padding="12,6"/>
                        <Button Content="Full Scan" 
                                Click="FullScan_Click"
                                Background="#334155"
                                Foreground="White"
                                BorderThickness="0"
                                CornerRadius="6"
                                Padding="12,6"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Assistant Panel -->
            <Border Grid.Row="0" Grid.Column="2" 
                    Background="{StaticResource PanelBackgroundBrush}" 
                    BorderBrush="{StaticResource BorderBrush}" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="16">
                <StackPanel Spacing="12">
                    <TextBlock Text="Assistant" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               Foreground="White"/>
                    
                    <StackPanel Spacing="4">
                        <TextBlock Text="Research complete" FontSize="12" Foreground="White"/>
                        <ProgressBar Value="100" Maximum="100" Foreground="#22c55e"/>
                    </StackPanel>
                    
                    <TextBlock Text="Recent Actions:" FontSize="12" Foreground="#94a3b8"/>
                    
                    <StackPanel Spacing="4">
                        <TextBlock x:Name="Action1Text" 
                                   Text="14:36:04  Research completed" 
                                   FontSize="11" 
                                   Foreground="#94a3b8"/>
                        <TextBlock x:Name="Action2Text" 
                                   Text="14:27:55  Research completed" 
                                   FontSize="11" 
                                   Foreground="#94a3b8"/>
                    </StackPanel>
                    
                    <Button Content="Research This Topic" 
                            Click="ResearchTopic_Click"
                            Background="#8b5cf6"
                            Foreground="White"
                            BorderThickness="0"
                            CornerRadius="6"
                            Padding="12,6"
                            HorizontalAlignment="Stretch"/>
                </StackPanel>
            </Border>

            <!-- Network Panel -->
            <Border Grid.Row="0" Grid.Column="3" 
                    Background="{StaticResource PanelBackgroundBrush}" 
                    BorderBrush="{StaticResource BorderBrush}" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="16">
                <StackPanel Spacing="12">
                    <TextBlock Text="Network" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               Foreground="White"/>
                    
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE73E;" Foreground="#22c55e" FontSize="16"/>
                        <TextBlock Text="Connected" FontSize="12" Foreground="White"/>
                    </StackPanel>
                    
                    <StackPanel Spacing="4">
                        <TextBlock x:Name="UploadSpeedText" 
                                   Text="↑ 1000 kbps" 
                                   FontSize="12" 
                                   Foreground="#94a3b8"/>
                        <TextBlock x:Name="DownloadSpeedText" 
                                   Text="↓ 1000 kbps" 
                                   FontSize="12" 
                                   Foreground="#94a3b8"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- File Activity Panel -->
            <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                    Background="{StaticResource PanelBackgroundBrush}" 
                    BorderBrush="{StaticResource BorderBrush}" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="16">
                
                <!-- Chat Interface -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="Chat" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               Foreground="White"
                               Margin="0,0,0,12"/>

                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="ChatMessagesPanel" Spacing="12"/>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- File Activity Panel (Right Side) -->
            <Border Grid.Row="1" Grid.Column="3"
                    Background="{StaticResource PanelBackgroundBrush}" 
                    BorderBrush="{StaticResource BorderBrush}" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="16">
                <StackPanel Spacing="12">
                    <TextBlock Text="File Activity" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               Foreground="White"/>
                    
                    <TextBlock Text="14:35:56  C:\temp\file.txt" 
                               FontSize="11" 
                               Foreground="#94a3b8"
                               TextWrapping="Wrap"/>
                    
                    <StackPanel Spacing="4">
                        <TextBlock Text="Disk Usage:" FontSize="12" Foreground="#94a3b8"/>
                        <ProgressBar Value="85" Maximum="100" Foreground="#f59e0b"/>
                        <TextBlock Text="148.98 GB Load / 930.66 GB" 
                                   FontSize="10" 
                                   Foreground="#94a3b8"/>
                    </StackPanel>
                    
                    <Button Content="Clean Temp Files" 
                            Click="CleanTempFiles_Click"
                            Background="#f59e0b"
                            Foreground="White"
                            BorderThickness="0"
                            CornerRadius="6"
                            Padding="12,6"
                            HorizontalAlignment="Stretch"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Chat Input Bar -->
        <Border Grid.Row="2" 
                Background="#1e293b" 
                BorderBrush="{StaticResource BorderBrush}" 
                BorderThickness="0,1,0,0" 
                Padding="16">
            <Grid ColumnSpacing="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="ChatInputBox" 
                         Grid.Column="0"
                         PlaceholderText="Type your message..."
                         Background="#334155"
                         Foreground="White"
                         BorderBrush="#475569"
                         CornerRadius="6"
                         Padding="12"
                         KeyDown="ChatInput_KeyDown"/>

                <Button Grid.Column="1"
                        Click="Attach_Click"
                        Background="#334155"
                        Foreground="White"
                        BorderThickness="0"
                        CornerRadius="6"
                        Padding="12">
                    <FontIcon Glyph="&#xE723;" FontSize="16"/>
                </Button>

                <Button x:Name="SendButton"
                        Grid.Column="2"
                        Content="Send"
                        Click="Send_Click"
                        Background="#8b5cf6"
                        Foreground="White"
                        BorderThickness="0"
                        CornerRadius="6"
                        Padding="20,10"/>
            </Grid>
        </Border>
    </Grid>
</Page>
