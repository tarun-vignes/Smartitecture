<UserControl x:Class="Smartitecture.Controls.AppTopBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="44" d:DesignWidth="600">
    <Border Style="{StaticResource Card.Glass}" Padding="12,8" Margin="16,10,16,12" CornerRadius="14">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Back + Logo -->
            <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                <Button x:Name="BackButton" Content="&#x2190;" Width="34" Height="32" Margin="0,0,8,0"
                        VerticalAlignment="Center"
                        Style="{StaticResource Button.Glass}" Click="BackButton_Click" Visibility="Collapsed"/>
                <ContentControl Style="{StaticResource Logo.Badge}" Width="24" Height="24" Margin="0,0,8,0" IsHitTestVisible="False"/>
            </StackPanel>

            <!-- Center: Title -->
            <TextBlock Grid.Column="1" x:Name="TitleBlock" Text="Smartitecture"
                       Style="{StaticResource Text.H2}" HorizontalAlignment="Left" VerticalAlignment="Center"
                       TextTrimming="CharacterEllipsis"/>

            <!-- Right: Home + Settings -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                <Button Content="{DynamicResource Nav.Home}" MinWidth="80" Height="32" Margin="0,0,8,0"
                        VerticalAlignment="Center" Style="{StaticResource Button.Glass}" Click="HomeButton_Click"/>
                <Button Content="{DynamicResource Nav.Settings}" MinWidth="80" Height="32"
                        VerticalAlignment="Center" Style="{StaticResource Button.Glass}" Click="SettingsButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
    
</UserControl>
