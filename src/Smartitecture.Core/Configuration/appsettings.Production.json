{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Error"
        }
    },
    "Security": {
        "JwtSecret": "YourProductionSecretKey",
        "Issuer": "smartitecture-prod",
        "Audience": "smartitecture-prod",
        "TokenExpirationMinutes": 30
    },
    "OpenAI": {
        "ApiKey": "YourOpenAIProdKey",
        "ApiEndpoint": "https://api.openai.com/v1",
        "MaxRetries": 5,
        "RequestTimeoutSeconds": 60
    },
    "Database": {
        "ConnectionString": "Server=prod-db;Database=Smartitecture;User Id=smarti;Password=YourProdPassword;MultipleActiveResultSets=true"
    },
    "ExternalServices": {
        "TimeoutSeconds": 60,
        "RetryAttempts": 5
    },
    "Cache": {
        "Provider": "Redis",
        "ConnectionString": "redis://redis-prod:6379",
        "ExpirationMinutes": 60
    }
}
