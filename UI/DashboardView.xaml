<UserControl x:Class="Smartitecture.UI.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Smartitecture.Controls"
             Background="{DynamicResource Brush.AppBackground}"
             Foreground="{DynamicResource Brush.OnSurface}">

    <Grid Background="{DynamicResource Brush.AppBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top bar -->
        <controls:AppTopBar Grid.Row="0" Title="{DynamicResource Dashboard.Title}" ShowBack="False"
                             HomeClicked="HomeClicked" SettingsClicked="SettingsClicked"/>

        <!-- Dashboard -->
        <Grid Grid.Row="1" Margin="24,12,24,24" MaxWidth="1040" HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Hero -->
            <Grid Grid.Row="0" Margin="0,12,0,18">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <ContentControl Grid.Column="0" Style="{StaticResource Logo.Badge}" Width="78" Height="78" VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Margin="16,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="{DynamicResource Dashboard.WelcomeTitle}" Style="{StaticResource Text.H1}"/>
                    <TextBlock Text="{DynamicResource Dashboard.WelcomeSubtitle}" Style="{StaticResource Text.Body}" TextWrapping="Wrap" MaxWidth="520"/>
                </StackPanel>
                <Border Grid.Column="2" Width="1" Background="Transparent"/>
            </Grid>

            <!-- Main cards -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Quick Actions -->
                    <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource Card.Glass}" Margin="0,0,12,12">
                        <StackPanel>
                            <TextBlock Text="{DynamicResource Dashboard.QuickActions}" Style="{StaticResource Text.H2}"/>
                            <TextBlock Text="{DynamicResource Dashboard.QuickActionsSubtitle}" Style="{StaticResource Text.Caption}" Margin="0,4,0,8"/>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="{DynamicResource Dashboard.StartChat}" Style="{StaticResource Button.Primary}" Click="OpenChatButton_Click"/>
                                <Button Content="{DynamicResource Dashboard.OpenSettings}" Style="{StaticResource Button.Glass}" Margin="8,0,0,0" Click="SettingsClicked"/>
                                <Button Content="{DynamicResource Dashboard.About}" Style="{StaticResource Button.Glass}" Margin="8,0,0,0" Click="OpenAbout_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- System Snapshot -->
                    <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource Card.Glass}" Margin="12,0,0,12">
                        <StackPanel>
                            <TextBlock Text="{DynamicResource Dashboard.SystemSnapshot}" Style="{StaticResource Text.H2}"/>
                            <TextBlock Text="{DynamicResource Dashboard.SystemSnapshotSubtitle}" Style="{StaticResource Text.Caption}" Margin="0,4,0,8"/>
                            <StackPanel>
                                <TextBlock Text="{DynamicResource Dashboard.SecurityStatus}" Style="{StaticResource Text.Body}"/>
                                <TextBlock Text="{DynamicResource Dashboard.PerformanceStatus}" Style="{StaticResource Text.Body}" Margin="0,4,0,0"/>
                                <TextBlock Text="{DynamicResource Dashboard.UpdatesStatus}" Style="{StaticResource Text.Body}" Margin="0,4,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Modes -->
                    <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource Card.Glass}" Margin="0,0,12,0">
                        <StackPanel>
                            <TextBlock Text="{DynamicResource Dashboard.Modes}" Style="{StaticResource Text.H2}"/>
                            <TextBlock Text="{DynamicResource Dashboard.ModesSubtitle}" Style="{StaticResource Text.Caption}" Margin="0,4,0,8"/>
                            <StackPanel>
                                <TextBlock Text="{DynamicResource Dashboard.ModeLumen}" Style="{StaticResource Text.Body}"/>
                                <TextBlock Text="{DynamicResource Dashboard.ModeFortis}" Style="{StaticResource Text.Body}" Margin="0,4,0,0"/>
                                <TextBlock Text="{DynamicResource Dashboard.ModeNexa}" Style="{StaticResource Text.Body}" Margin="0,4,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Recent Activity -->
                    <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource Card.Glass}" Margin="12,0,0,0">
                        <StackPanel>
                            <TextBlock Text="{DynamicResource Dashboard.RecentActivity}" Style="{StaticResource Text.H2}"/>
                            <TextBlock Text="{DynamicResource Dashboard.RecentActivitySubtitle}" Style="{StaticResource Text.Caption}" Margin="0,4,0,8"/>
                            <TextBlock Text="{DynamicResource Dashboard.NoActivity}" Style="{StaticResource Text.Subtle}"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
