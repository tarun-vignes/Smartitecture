<UserControl x:Class="Smartitecture.UI.ChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Smartitecture.Controls"
             Background="{DynamicResource Brush.AppBackground}"
             Foreground="{DynamicResource Brush.OnSurface}"
             Focusable="True"
             PreviewKeyDown="Window_KeyDown">

    <Grid Background="{DynamicResource Brush.AppBackground}">
        <Grid x:Name="ChatContent" Background="{DynamicResource Brush.AppBackground}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Top bar -->
            <controls:AppTopBar Grid.Row="0" Title="{DynamicResource Chat.Title}" ShowBack="True"
                                 BackClicked="GoDashboard_Click" HomeClicked="GoHome_Click" SettingsClicked="OpenSettings_Click"/>

            <Grid Grid.Row="1" Grid.RowSpan="4" Margin="24,8,24,16" MaxWidth="1240" HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Model selector row -->
                    <Border Grid.Row="0" Style="{StaticResource Card.Glass}" Padding="12" Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="{DynamicResource Chat.ModelLabel}" Style="{StaticResource Text.Caption}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <ComboBox Name="ModelSelector" Width="240" SelectionChanged="ModelSelector_SelectionChanged" Style="{StaticResource ComboBox.Glass}"/>
                                <TextBlock Text="{DynamicResource Chat.ModeLabel}" Style="{StaticResource Text.Caption}" VerticalAlignment="Center" Margin="16,0,8,0"/>
                                <ComboBox Name="ModeSelector" Width="150" SelectionChanged="ModeSelector_SelectionChanged" Style="{StaticResource ComboBox.Glass}"/>
                                <TextBlock Name="ModelStatusText" Text="{DynamicResource Chat.ModelLoading}" Style="{StaticResource Text.Subtle}" Margin="10,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center">
                                <Button Name="HistoryButton" Content="{DynamicResource Chat.History}" MinWidth="96" Height="32"
                                        Click="HistoryButton_Click" Style="{StaticResource Button.Glass}" Margin="0,0,8,0"/>
                                <Button Name="ClearChatButton" Content="{DynamicResource Chat.ClearChat}" MinWidth="96" Height="32"
                                        Click="ClearChatButton_Click" Style="{StaticResource Button.Glass}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Chat Messages Area -->
                    <Border Grid.Row="1" Style="{StaticResource Card.Glass}" Padding="8" Margin="0,0,0,10">
                        <ScrollViewer Name="ChatScrollViewer" Background="Transparent"
                                      VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                            <StackPanel Name="ChatMessagesPanel" Margin="10">
                                <Border Style="{StaticResource Chat.Bubble.System}">
                                    <TextBlock Text="{DynamicResource Chat.Welcome}"
                                               Style="{StaticResource Text.Caption}"
                                               Foreground="{DynamicResource Brush.ChatBubbleSystemForeground}"
                                               TextWrapping="Wrap" HorizontalAlignment="Center"/>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>

                    <!-- Typing Indicator -->
                    <Border Grid.Row="2" Name="TypingIndicator" Style="{StaticResource Card.Glass}" Padding="12,8" Visibility="Collapsed" Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{DynamicResource Chat.Typing}" Style="{StaticResource Text.Caption}" Foreground="{DynamicResource Brush.Success}"/>
                            <TextBlock Name="TypingDots" Text="..." Style="{StaticResource Text.Caption}" Foreground="{DynamicResource Brush.Success}" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Input Area -->
                    <Border Grid.Row="3" Style="{StaticResource Card.Glass}" Padding="16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" Name="MessageInput" Style="{StaticResource TextBox.Glass}" AcceptsReturn="True"
                                     VerticalAlignment="Center"
                                     MaxHeight="120" VerticalScrollBarVisibility="Auto" KeyDown="MessageInput_KeyDown" TextWrapping="Wrap"
                                     Text=""/>
                            <Button Grid.Column="1" Name="AttachButton" Content="{DynamicResource Chat.Attach}" MinWidth="96" Height="32"
                                    VerticalAlignment="Center" Margin="10,0,5,0"
                                    Style="{StaticResource Button.Glass}" Click="AttachButton_Click" ToolTip="{DynamicResource Chat.AttachTooltip}"/>
                            <Button Grid.Column="2" Name="SendButton" Content="{DynamicResource Chat.Send}" MinWidth="96" Height="32"
                                    VerticalAlignment="Center" Style="{StaticResource Button.Primary}"
                                    Click="SendButton_Click" IsDefault="True"/>
                        </Grid>
                    </Border>
                </Grid>

                <!-- History side panel -->
                <Border x:Name="HistoryPanel" Grid.Column="1" Width="360" Padding="16" Margin="12,0,0,0"
                        HorizontalAlignment="Right" VerticalAlignment="Stretch" Visibility="Collapsed" Opacity="0"
                        Style="{StaticResource Card.Glass}">
                    <Border.RenderTransform>
                        <TranslateTransform X="40"/>
                    </Border.RenderTransform>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="220"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Margin="0,0,0,10">
                            <TextBlock Text="{DynamicResource Chat.HistoryTitle}"
                                       Style="{StaticResource Text.H2}" Margin="0,0,0,8"/>
                            <StackPanel Orientation="Horizontal">
                                <Button x:Name="HistoryTabButton" Content="{DynamicResource Chat.HistoryTab}"
                                        MinWidth="110" Height="30"
                                        Style="{StaticResource Button.Glass}" Click="HistoryTabButton_Click" Margin="0,0,8,0"/>
                                <Button x:Name="DeletedTabButton" Content="{DynamicResource Chat.DeletedTab}"
                                        MinWidth="110" Height="30"
                                        Style="{StaticResource Button.Glass}" Click="DeletedTabButton_Click"/>
                            </StackPanel>
                        </StackPanel>

                        <Border Grid.Row="1" Style="{StaticResource Card.Glass}" Padding="8" Margin="0,0,0,10">
                            <Grid>
                                <Grid x:Name="HistoryListContainer">
                                    <ListBox x:Name="HistoryList" SelectionChanged="HistoryList_SelectionChanged"
                                             Background="Transparent" BorderThickness="0">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="4">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="{Binding Title}" Style="{StaticResource Text.Body}"/>
                                                        <TextBlock Text="{Binding Time}" Style="{StaticResource Text.Subtle}"/>
                                                    </StackPanel>
                                                    <Button Grid.Column="1" Content="🗑" Width="30" Height="28"
                                                            Margin="8,0,0,0"
                                                            ToolTip="{DynamicResource Chat.HistoryDelete}"
                                                            Style="{StaticResource Button.Glass}"
                                                            Tag="{Binding Id}"
                                                            Click="DeleteHistory_Click"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                    <TextBlock x:Name="HistoryEmptyText" Text="{DynamicResource Chat.HistoryEmpty}"
                                               Style="{StaticResource Text.Subtle}" HorizontalAlignment="Center"
                                               VerticalAlignment="Center" Visibility="Collapsed"/>
                                </Grid>

                                <Grid x:Name="DeletedListContainer" Visibility="Collapsed">
                                    <ListBox x:Name="DeletedList" SelectionChanged="DeletedList_SelectionChanged"
                                             Background="Transparent" BorderThickness="0">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="4">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="{Binding Title}" Style="{StaticResource Text.Body}"/>
                                                        <TextBlock Text="{Binding Time}" Style="{StaticResource Text.Subtle}"/>
                                                    </StackPanel>
                                                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="8,0,0,0">
                                                        <Button Content="↩" Width="30" Height="28" Margin="0,0,6,0"
                                                                ToolTip="{DynamicResource Chat.Recover}"
                                                                Style="{StaticResource Button.Glass}"
                                                                Tag="{Binding Id}"
                                                                Click="RecoverDeleted_Click"/>
                                                        <Button Content="🗑" Width="30" Height="28"
                                                                ToolTip="{DynamicResource Chat.DeleteForever}"
                                                                Style="{StaticResource Button.Glass}"
                                                                Tag="{Binding Id}"
                                                                Click="DeleteForever_Click"/>
                                                    </StackPanel>
                                                </Grid>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                    <TextBlock x:Name="DeletedEmptyText" Text="{DynamicResource Chat.DeletedEmpty}"
                                               Style="{StaticResource Text.Subtle}" HorizontalAlignment="Center"
                                               VerticalAlignment="Center" Visibility="Collapsed"/>
                                </Grid>
                            </Grid>
                        </Border>

                        <Border Grid.Row="2" Style="{StaticResource Card.Glass}" Padding="8">
                            <Grid>
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <StackPanel x:Name="HistoryPreviewPanel" Margin="4"/>
                                </ScrollViewer>

                                <!-- Delete confirmation (fills preview box only) -->
                                <Border x:Name="DeleteConfirmCard"
                                        Background="{DynamicResource Brush.Surface}"
                                        BorderBrush="{DynamicResource Brush.GlassBorder}"
                                        BorderThickness="1"
                                        CornerRadius="12"
                                        Padding="16"
                                        Visibility="Collapsed"
                                        Opacity="0"
                                        Panel.ZIndex="2"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        RenderTransformOrigin="0.5,0.5">
                                    <Border.RenderTransform>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Border.RenderTransform>
                                    <Grid>
                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="260">
                                            <TextBlock x:Name="DeleteConfirmTitleText" Text="{DynamicResource Chat.DeleteTitle}" Style="{StaticResource Text.H2}" TextAlignment="Center" Margin="0,0,0,6"/>
                                            <TextBlock x:Name="DeleteConfirmWarningText" Text="{DynamicResource Chat.DeleteWarning}" Style="{StaticResource Text.Body}" TextWrapping="Wrap" TextAlignment="Center"/>
                                            <TextBlock x:Name="DeleteConfirmRecoveryText" Text="{DynamicResource Chat.DeleteRecovery}" Style="{StaticResource Text.Caption}" Margin="0,8,0,0" TextWrapping="Wrap" TextAlignment="Center"/>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,12,0,0">
                                                <Button Content="✖" Width="44" Height="36" Margin="0,0,10,0"
                                                        ToolTip="{DynamicResource Chat.DeleteCancel}"
                                                        Style="{StaticResource Button.Glass}" Click="DeleteCancel_Click"/>
                                                <Button Content="✔" Width="44" Height="36"
                                                        ToolTip="{DynamicResource Chat.DeleteConfirm}"
                                                        Style="{StaticResource Button.Primary}" Click="DeleteConfirm_Click"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Border>

                        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                            <Button Content="{DynamicResource Chat.HistoryClose}" Style="{StaticResource Button.Glass}"
                                    Click="HistoryClose_Click" Margin="0,0,8,0"/>
                            <Button x:Name="HistoryOpenButton" Content="{DynamicResource Chat.HistoryOpen}" Style="{StaticResource Button.Primary}"
                                    Click="HistoryOpen_Click"/>
                        </StackPanel>

                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- Tool confirmation overlay -->
        <Grid x:Name="ToolConfirmOverlay"
              Background="#66000000"
              Visibility="Collapsed"
              Opacity="0"
              IsHitTestVisible="True"
              Panel.ZIndex="20">
            <Border x:Name="ToolConfirmCard"
                    Style="{StaticResource Card.Glass}"
                    Width="420"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Padding="18"
                    RenderTransformOrigin="0.5,0.5">
                <Border.RenderTransform>
                    <ScaleTransform ScaleX="0.96" ScaleY="0.96"/>
                </Border.RenderTransform>
                <StackPanel>
                    <TextBlock Text="{DynamicResource Chat.ToolConfirmTitle}" Style="{StaticResource Text.H2}" TextAlignment="Center"/>
                    <TextBlock x:Name="ToolConfirmMessage"
                               Text="{DynamicResource Chat.ToolConfirmMessage}"
                               Style="{StaticResource Text.Body}"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0,8,0,0"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,16,0,0">
                        <Button Content="✕" Width="44" Height="44" Click="ToolConfirmCancel_Click"
                                Style="{StaticResource Button.Glass}" ToolTip="{DynamicResource Chat.ToolConfirmCancel}"/>
                        <Button Content="✓" Width="44" Height="44" Margin="10,0,0,0" Click="ToolConfirmConfirm_Click"
                                Style="{StaticResource Button.Primary}" ToolTip="{DynamicResource Chat.ToolConfirmConfirm}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
