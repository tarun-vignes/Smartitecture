<UserControl x:Class="Smartitecture.UI.AboutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Smartitecture.Controls"
             Background="{DynamicResource Brush.AppBackground}"
             Foreground="{DynamicResource Brush.OnSurface}">
  <Grid Background="{DynamicResource Brush.AppBackground}" Margin="24,12,24,24" MaxWidth="760" HorizontalAlignment="Center">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <controls:AppTopBar Grid.Row="0" Title="{DynamicResource About.Title}" ShowBack="True"
                         BackClicked="BackClicked" HomeClicked="HomeClicked" />

    <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,6,0,10">
      <ContentControl Style="{StaticResource Logo.Badge}" Width="28" Height="28" Margin="0,0,10,0"/>
      <TextBlock Text="{DynamicResource About.Header}" Style="{StaticResource Text.H1}" VerticalAlignment="Center"/>
    </StackPanel>

    <Border Grid.Row="2" Style="{StaticResource Card.Glass}" Padding="18" Margin="0,0,0,12">
      <StackPanel>
        <TextBlock Text="{DynamicResource About.Tagline}" Style="{StaticResource Text.Body}"/>
        <TextBlock Text="{DynamicResource About.Version}" Style="{StaticResource Text.Caption}" Margin="0,2,0,8"/>
        <TextBlock Text="{DynamicResource About.Description}" Style="{StaticResource Text.Caption}" TextWrapping="Wrap"/>
        <Border Background="{DynamicResource Brush.InputBackground}" CornerRadius="10" Padding="10" Margin="0,12,0,0">
          <StackPanel>
            <TextBlock Text="{DynamicResource About.CoreHighlights}" Style="{StaticResource Text.Caption}" FontWeight="SemiBold"/>
            <TextBlock Text="{DynamicResource About.Highlight1}" Style="{StaticResource Text.Caption}" Margin="0,4,0,0"/>
            <TextBlock Text="{DynamicResource About.Highlight2}" Style="{StaticResource Text.Caption}"/>
            <TextBlock Text="{DynamicResource About.Highlight3}" Style="{StaticResource Text.Caption}"/>
          </StackPanel>
        </Border>
        <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
          <Button Content="{DynamicResource About.OpenDocs}" Style="{StaticResource Button.Glass}" Click="OpenDocs_Click"/>
          <Button Content="{DynamicResource About.Back}" Style="{StaticResource Button.Primary}" Margin="8,0,0,0" Click="BackClicked"/>
        </StackPanel>
      </StackPanel>
    </Border>

    <TextBlock Grid.Row="3" Text="{DynamicResource About.Copyright}" Style="{StaticResource Text.Caption}" HorizontalAlignment="Right"/>
  </Grid>
</UserControl>
